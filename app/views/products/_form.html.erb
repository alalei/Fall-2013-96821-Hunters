 <%= form_for @product, :html => {:multipart => true} do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

    <div class="field">
      <%= f.label :brand %><br />
      <%= f.text_field :brand %>
    </div>

    <div class="field">
      <%= f.label :ptype %><br />
      <%= f.text_field :ptype %>
    </div>

     <div class="condition">
       <%= f.label :condition %><br />
       <%= f.label :condition, "New", :value => 1  %>
       <%= f.radio_button :condition, true,  :checked => @product.condition?%>
       <%= f.label :condition, "Used", :value => 0 %>
       <%= f.radio_button :condition, false, :checked => !@product.condition? %>
     </div>


     <div id="daysUsed" class="DaysUsed" style="display: none">
       Days Used
       <%= f.select :days_used, options_for_select(["Less than 1 week", "1 to 3 months", "3 to 6 months", "6 month to 1 year", "More than 1 year", "More than 5 years"],@product.days_used), :class => 'genForm_dropBox' %>
     </div>



  <div class="field">
    <%= f.label :starting_price %><br />
    <%= f.text_field :starting_price %>
  </div>
  <div class="field">
    <%= f.label :fixed_price %><br />
    <%= f.text_field :fixed_price %>
  </div>
  <div class="field">
    <%= f.label :is_bid %><br />
    <%= f.check_box :is_bid %>
  </div>

    <div class="field">
      <%= f.label :listing_days %><br />
      <%= f.text_field :listing_days %>
    </div>


    <div class="field">
      <%= f.label :start_date %><br />
      <%= f.text_field :start_date %>
    </div>

    <div class="field">
      <%= f.label :shipping_cost %><br />
      <%= f.text_field :shipping_cost %>
    </div>

     <div class="field">
       <%= f.file_field :image %>

       <%= f.label :remote_image_url, "or image URL" %><br />
       <%= f.text_field :remote_image_url %>
     </div>

  <div class="actions">
    <%= f.submit %>
  </div>


<% end %>
