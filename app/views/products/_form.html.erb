 <%= form_for @product, :html => {:multipart => true} do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
    <div class="field">
      <%= %><br />
      <%= f.select :category_id, Category.all.map{|c| [c.name,c.id]}, prompt: 'select category' %>
    </div>
    <div class="field">
      <%= f.label :brand %><br />
      <%= f.text_field :brand %>
    </div>

    <div class="field">
      <%= f.label :ptype %><br />
      <%= f.text_field :ptype %>
    </div>

  <div class="field">
    <%= f.label :condition %><br />
    <%= f.check_box :condition %>
  </div>
  <div class="field">
    <%= f.label :starting_price %><br />
    <%= f.text_field :starting_price %>
  </div>
  <div class="field">
    <%= f.label :fixed_price %><br />
    <%= f.text_field :fixed_price %>
  </div>
  <div class="field">
    <%= f.label :is_bid %><br />
    <%= f.check_box :is_bid %>
  </div>

    <div class="field">
      <%= f.label :listing_days %><br />
      <%= f.text_field :listing_days %>
    </div>


    <div class="field">
      <%= f.label :start_date %><br />
      <%= f.text_field :start_date %>
    </div>

    <div class="field">
      <%= f.label :shipping_cost %><br />
      <%= f.text_field :shipping_cost %>
    </div>

     <div class="field">
       <%= f.file_field :image %>

       <%= f.label :remote_image_url, "or image URL" %><br />
       <%= f.text_field :remote_image_url %>
     </div>

  <div class="actions">
    <%= f.submit %>
  </div>


<% end %>
